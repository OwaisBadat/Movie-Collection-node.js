    <div id="topDiv">
    </div>
    <div id="addPage">
      <label>Add Movie</label>
      <form action="/add-movie" method="POST" style="margin:3%;">
          <input type="text" name = "movieTitle" placeholder="Movie Title"/>
          <input type="text" name = "movieDescription" placeholder="Movie description"/>
          <input type="text" name = "movieGenre" placeholder="Movie Genre"/>
          <input type="text" name = "moviePosterURL" placeholder="Movie Poster URL"/>
          <input type="submit" />
      </form>
      <p><a href="/my-movie-collection">My Movie Collection</a></p>
    </div>



  </body>


